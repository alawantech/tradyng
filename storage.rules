rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to product images for everyone (public read)
    match /businesses/{businessId}/products/{allPaths=**} {
      allow read: if true;

      // Disallow direct client SDK writes to product images. Use signed upload URLs
      // generated by a trusted server-side function (generateUploadUrl).
      allow write: if false;
    }

    // Add a safe default: deny other paths unless explicitly allowed
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
